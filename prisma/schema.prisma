datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  password       String?
  name           String?
  image          String?
  emailVerified  DateTime?
  sessions       Session[]
  accounts       Account[]
  purchases      Purchase[]
  isAdmin        Boolean   @default(false)
}


model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  user               User    @relation(fields: [userId], references: [id])
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
}
model Purchase {
  id         String   @id @default(cuid())
  userId     String
  dossierId  String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  dossier    Dossier  @relation(fields: [dossierId], references: [id])
}

model Dossier {
  id          String     @id @default(cuid())
  title       String
  description String?
  price       Float
  files       String
  createdAt   DateTime   @default(now())
  purchases   Purchase[]
}

model GuestPurchase {
  id         String   @id @default(cuid())
  email      String
  dossierId  String
  createdAt  DateTime @default(now())
  txid       String?  // Ajoute cette ligne
  amountBtc  Float?   // Ajoute cette ligne
  btcUsdRate Float?   // Ajoute cette ligne
}
